<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #E3FEF7;
            color: #333;
        }
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #003C43;
            color: white;
            padding: 10px 20px;
        }
        .header h1 {
            margin: 0;
        }
        .header form {
            margin: 0;
        }
        .header button {
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
        }
        .header button:hover {
            background-color: #c82333;
        }
        .add-pariwisata .btn-primary{
            padding: 10px 20px;
            background-color: #939ed1;
            text-decoration: none;
            color: white;
            width: 5px;
            height: auto;
            border-radius: 4px;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #E3FEF8;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .card {
            background-color: #77B0AA;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            color: white;
        }

        .card p {
            text-align: justify;
        }
        .card img {
            max-width: 50%;
            border-radius: 8px;
            margin-bottom: 10px;
        }
        .card-actions {
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        .card-actions form, .card-actions a {
            margin: 0;
        }
        .card-actions button, .card-actions a {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            cursor: pointer;
            text-decoration: none;
        }
        .card h2{
            color: #003C43;
        }
        .card-actions button:hover, .card-actions a:hover {
            background-color: #0056b3;
        }
        .card-actions .btn-delete {
            background-color: #dc3545;
        }
        .card-actions .btn-delete:hover {
            background-color: #c82333;
        }
        .add-pariwisata {
        margin-bottom: 20px;
        }

        .gambar-pariwisata {
            width: 100%;
            max-width: 300px; /* Sesuaikan lebar maksimum gambar */
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Admin Dashboard</h1>
        <form method="post" action="/admin/logout">
            <button type="submit">Logout</button>
        </form>
    </div>
    <div class="container">
        <div class="add-pariwisata">
            <a href="/admin/pariwisata/new" class="btn-primary">Tambah Pariwisata</a>
        </div>
        <div class="pariwisata-list">
            <% pariwisata.forEach(function(item) { %>
                <div class="card">
                    <h2><%= item.judul %></h2>
                    <p><%= item.deskripsi %></p>
                    <img src="/uploads/<%= item.gambar %>" alt="<%= item.judul %>" class="gambar-pariwisata">
                    <p><%= item.deskripsi_gambar %></p>
                    <div class="card-actions">
                        <a href="/admin/pariwisata/<%= item.id %>/edit" class="btn-primary">Edit</a>
                        <form action="/admin/pariwisata/<%= item.id %>/delete" method="post">
                            <button type="submit" class="btn-delete">Delete</button>
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
