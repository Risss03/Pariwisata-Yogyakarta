<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .pariwisata-item {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .pariwisata-item img {
            max-width: 100px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Daftar Pariwisata</h1>
        <div class="pariwisata-list">
            <% pariwisata.forEach(function(item) { %>
                <div class="pariwisata-item">
                    <h2><%= item.judul %></h2>
                    <p><%= item.deskripsi %></p>
                    <img src="/uploads/<%= item.gambar %>" alt="<%= item.judul %>">
                    <p><%= item.deskripsi_gambar %></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
